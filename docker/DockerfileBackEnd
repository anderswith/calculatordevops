# Use .NET 8.0 SDK as the build environment
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build

# Set the working directory
WORKDIR /src

# Copy and restore dependencies
COPY ["../DevOpsCalculator/DevOpsCalculator.csproj", "./"]
RUN dotnet restore "./DevOpsCalculator.csproj"

# Copy the rest of the project files
COPY . .

RUN dotnet restore "./CalculatorTests.csproj"
RUN dotnet build "./CalculatorTests.csproj" -c Release --no-restore


# Build the application
RUN dotnet build "./DevOpsCalculator.csproj" -c Release --no-restore

# Publish the application to /app/publish
RUN dotnet publish "./DevOpsCalculator.csproj" -c Release -o /app/publish --no-restore

# Use the .NET 8.0 runtime for the final container
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime

WORKDIR /app

# Copy the published application from the build step
COPY --from=build /app/publish .

# Expose the port
EXPOSE 8080

# Set the entry point
ENTRYPOINT ["dotnet", "DevOpsCalculator.dll"]

