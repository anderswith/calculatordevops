# Step 1: Build the .NET app
FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build

# Sæt arbejdsbibliotek
WORKDIR /src

# Kopiér projektfilerne
COPY ["../DevOpsCalculator/DevOpsCalculator.csproj", "./"]

# Restore dependencies
RUN dotnet restore "./DevOpsCalculator.csproj"

# Kopiér resten af projektet
COPY . .

# Byg applikationen
RUN dotnet restore "./DevOpsCalculator.csproj"

# Step 2: Run the .NET app
FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base

# Sæt arbejdsbibliotek
WORKDIR /app

# Kopiér de byggede filer fra build-steget
COPY --from=build /app/publish .

# Eksponer den port, som applikationen kører på
EXPOSE 80

# Kør applikationen
ENTRYPOINT ["dotnet", "DevOpsCalculator.dll"]
